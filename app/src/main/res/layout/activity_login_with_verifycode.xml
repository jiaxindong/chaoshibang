<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:focusable="true" >

        <RelativeLayout
            android:id="@+id/rl_top"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/icon_top">
            <ImageButton
                android:id="@+id/iv_exit"
                android:layout_width="?attr/actionBarSize"
                android:layout_height="?attr/actionBarSize"
                android:background="@android:color/transparent"
                android:src="@drawable/icon_delete_white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:textColor="@color/white"
                android:textSize="@dimen/font_login_title"
                android:text="@string/title_activity_login_with_verifycode"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>

        <!-- 手机号码11位，再加两位的空格，形如 “135 5240 5719”  -->
        <RelativeLayout
            android:id="@+id/rl_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/double_margin_small"
            android:paddingLeft="@dimen/margin_small"
            android:paddingRight="@dimen/margin_small"
            android:background="@color/white">
            <ImageView
                android:id="@+id/iv_mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_mobile"/>

            <com.creditease.yixuedai.widget.ClearableEditText
                android:id="@+id/et_mobile"
                android:layout_width="match_parent"
                android:layout_height="@dimen/et_height"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_mobile"
                style="@style/AppEditText"
                android:maxLength="13"
                android:inputType="phone"
                android:hint="@string/mobile_hint" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_verify_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:paddingLeft="@dimen/margin_small"
            android:paddingRight="@dimen/margin_small"
            android:background="@color/white">
            <ImageView
                android:id="@+id/iv_verify_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_pass"/>

            <Button
                android:id="@+id/bt_get_verify_code"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/et_height"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:enabled="false"
                android:gravity="center"
                android:textColor="@drawable/selector_color_green_grey"
                android:text="@string/verify_code_get"/>

            <com.creditease.yixuedai.widget.ClearableEditText
                android:id="@+id/et_verify_code"
                style="@style/AppEditText"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/et_height"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_verify_code"
                android:layout_toLeftOf="@id/bt_get_verify_code"
                android:layout_marginRight="@dimen/margin_medium"
                android:hint="@string/verify_code_hint_input"
                android:inputType="number"
                android:maxLength="6" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cb_attorney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/selector_checkbox"
                android:button="@null"
                android:drawablePadding="@dimen/margin_micro"
                android:checked="true"
                android:text="同意"/>

            <TextView
                android:id="@+id/attorney_letter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@drawable/selector_color_green_grey"
                android:text="@string/attorney_letter"/>

            <TextView
                android:id="@+id/et_verify_code_fail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="right"
                android:textColor="@drawable/selector_color_green_grey"
                android:text="@string/verify_code_get_fail" />

        </LinearLayout>

        <Button
            android:id="@+id/bt_login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bt_height"
            android:layout_marginTop="@dimen/margin_medium"
            style="@style/AppButtonGreenSolid"
            android:enabled="false"
            android:text="@string/login" />

    </LinearLayout>

</ScrollView>