<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/blue_toolbar">

    <TextView
        android:id="@+id/activity_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="200dp"
        android:singleLine="true"
        android:layout_centerInParent="true"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:text="正在定位..."
        android:visibility="visible" />
    
    <ImageView
        android:id="@+id/iv_locate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/activity_title"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:src="@drawable/icon_close"
        android:visibility="gone" />
    
    <ImageView
        android:id="@+id/iv_edit_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/activity_title"
        android:layout_centerVertical="true"
        android:background="@color/white"
        android:src="@drawable/icon_arrow_down"
        android:visibility="gone" />

    <Button
        android:id="@+id/activity_back"
        android:layout_width="?attr/actionBarSize"
        android:layout_height="?attr/actionBarSize"
        android:layout_centerVertical="true"
        android:layout_marginLeft="17dp"
        android:drawableLeft="@drawable/return_back"
        android:background="@android:color/transparent"
        android:src="@drawable/return_back"
        android:visibility="gone" />

    <EditText
        android:id="@+id/et_edit_place"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/activity_back"
        android:layout_alignBottom="@id/activity_back"
        android:hint="输入地址"
        android:visibility="gone"/>

</RelativeLayout>